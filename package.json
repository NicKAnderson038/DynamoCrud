{
	"name": "dynamo-crud",
	"version": "1.0.0",
	"description": "Serverless dynamoDB CRUD application",
	"main": "serverless.yml",
	"author": "Nick Anderson",
	"license": "MIT",
	"scripts": {
		"gulp-test": "clear; GULP=true gulp && gulp",
		"gulp-cleanup": "gulp",
		"format": "prettier --write services/**",
		"local": "GULP=true gulp && yon sls-offline; gulp",
		"sls-offline": "sls offline --stage dev --region us-east-1 --verbose --aws-profile default",
		"build": "GULP=true gulp && yon run deploy-sls; gulp",
		"remove-apis": "GULP=true gulp && yon run rm-deploy-sls; gulp",
		"deploy-sls": "sls deploy --stage dev --region us-east-1 --verbose --aws-profile default",
		"rm-deploy-sls": "sls remove --stage dev --region us-east-1 --verbose --aws-profile default",
		"test": "echo \"Error: no test specified\" && exit 1",
		"first": "echo \"🚦 START 👉 1st script❗\" && yon run second",
		"second": "echo \"🏁 END 👉 2nd script❗\""
	},
	"dependencies": {
		"@hapi/joi": "^17.1.1",
		"dynamodb-update-expression": "^0.1.21",
		"lodash": "^4.5.0",
		"node-fetch": "^2.6.0",
		"uuidv4": "^6.0.7"
	},
	"devDependencies": {
		"aws-sdk": "^2.658.0",
		"eslint-config-prettier": "^6.10.1",
		"eslint-plugin-prettier": "^3.1.3",
		"gulp": "^4.0.2",
		"gulp-clean": "^0.4.0",
		"gulp-concat": "^2.6.1",
		"gulp-emojify": "^0.0.2",
		"husky": "^4.2.5",
		"prettier": "2.0.4",
		"pretty-quick": "^2.0.1",
		"serverless-offline": "^6.1.4",
		"serverless-plugin-common-excludes": "^3.0.0",
		"serverless-plugin-include-dependencies": "^4.1.0",
		"yamljs": "^0.3.0",
		"yarn-or-npm": "^3.0.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	}
}
